<Window x:Class="MainDatas.BookAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainDatas" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AdminBook" WindowStyle="None" MouseRightButtonDown="Window_MouseRightButtonDown"  Height="700" WindowStartupLocation="CenterScreen" Width="1000">
    <Grid>
        <ItemsControl x:Name="xxxxx">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,50,20,50" Background="White" Height="600" Width="450">
                        <Border BorderBrush="Black" BorderThickness="2"/>
                        <StackPanel>
                            <Image Source="{Binding path_image}" Width="220" Height="350"/>
                            <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding Name_ketab}" HorizontalAlignment="Center" FontSize="17"/>
                            <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding Name_nevisande}" HorizontalAlignment="Center" FontSize="17"/>
                            <DockPanel HorizontalAlignment="Center">
                                <materialDesign:RatingBar ValueChanged="Ssn_ValueChanged" x:Name="ssn"  FlowDirection="LeftToRight" Height="42"  Width="130" />
                            </DockPanel>
                            <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding emtiyaz_ketab}" HorizontalAlignment="Center" FontSize="11"/>
                            <DockPanel >
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="Price" HorizontalAlignment="Left" Margin="70,0,70,0" FontSize="15"/>
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding Gheymat}" HorizontalAlignment="Right" Margin="70,0,70,0" FontSize="15"/>
                            </DockPanel>
                            <DockPanel >
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="Sales Revenue" HorizontalAlignment="Left" Margin="70,0,70,0" FontSize="15"/>
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding daramad_forosh}" HorizontalAlignment="Right" Margin="70,0,70,0" FontSize="15"/>
                            </DockPanel>
                            <DockPanel >
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="Sales Number" HorizontalAlignment="Left" Margin="70,0,70,0" FontSize="15"/>
                                <TextBlock FontFamily="Times New Roman (Headings CS)" Text="{Binding tedad_forosh}" HorizontalAlignment="Right" Margin="70,0,70,0" FontSize="15"/>
                            </DockPanel>
                            <TextBlock FontFamily="Times New Roman (Headings CS)" Text="Description" HorizontalAlignment="Left" Margin="70,5,0,10" FontSize="15"/>
                            <TextBlock  FontFamily="Times New Roman (Headings CS)" Text="{Binding Tozih_ketab}" HorizontalAlignment="Left" Margin="80,0" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
